<div id="forecast" class="p-1 border-[1px] rounded-lg shadow-md mb-6">
  <h3 class="text-xl font-semibold mb-2">Forecast  5 days</h3>

  <%= render partial: "api/v1/forecasts/cache_age", locals: { cache_age: cache_age } %>

  <div class="flex flex-wrap justify-center gap-4">
    <% forecast_data.each do |day| %>
      <div class="p-4 border-[1px] rounded-lg shadow-md bg-gray-100 flex flex-col  w-auto">
        <div><%= day[:date] %></div>
        <div class="flex items-center">
          <div>
            <img
              src="http://openweathermap.org/img/w/<%= day[:most_common_icon] %>.png"
              alt="<%= day[:title].humanize %>"
              title="<%= day[:title].humanize %>"
              class="w-12 h-12"/>
          </div>
          <div>
            <span class="flex items-center" style="padding-left: 5px;">
              <%= day[:min_temp] %> / <%= day[:max_temp] %> &#8451;
            </span>
          </div>
        </div>

        <div class="mt-1 text-sm">
          Humidity: <%= day[:humidity] %>%
        </div>
        <div class="mt-1 text-sm">
          Wind: <%= day[:wind_speed] %> m/s
        </div>
      </div>
    <% end %>
  </div>
</div>